{
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.formatOnSave": true,
  "[rust]": {
    "editor.defaultFormatter": "statiolake.vscode-rustfmt"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/node_modules": true,
    "**/build": true,
    "**/target": true
  },
  "explorerExclude.backup": {},
  "files.associations": {
    "*.json": "json",
    "tsconfig.json": "jsonc"
  },
  "git.enabled": true,
  "git.countBadge": "off",
  "git.decorations.enabled": false,
  "editor.inlayHints.enabled": "offUnlessPressed", // can toggle them with Ctrl + Alt pressed.
  "npm.scriptExplorerExclude": [
    "install"
  ]
}